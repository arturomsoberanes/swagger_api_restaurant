    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "Restaurants",
      "description": "API for users in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],

  "paths": {
    "/restaurants": {
      "get": {
        "tags": ["Restaurants"],
        "summary": "Get all Restaurants in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Restaurant"
            }
          }
        }
      }
    },
    "/restaurants/create": {
      "post": {
        "tags": ["Restaurants"],
        "description": "Create new restaurant in system",
        "parameters": [
          {
            "name": "restaurant",
            "in": "body",
            "description": "Restaurant that we want to create",
            "schema": {
              "$ref": "#/definitions/Restaurant"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New restaurant is created",
            "schema": {
              "$ref": "#/definitions/Restaurant"
            }
          }
        }
      }
    },
    "/restaurants/delete/{id}": {
      "parameters":[
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of restaurant that we want to delete",
          "type": "integer"
        }
      ],
      "delete": {
        "tags": ["Restaurants"],
        "description": "Delete restaurant in system",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID restaurant that we want to delete",
            "required": true,
            "type": "integer"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "The restaurant was deleted"
          }
        }
      }
    },
    "/restaurants/update/{id}": {
      "parameters":[
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of restaurant that we want to update",
          "type": "integer"
        }
      ],
      "put": {
        "tags": ["Restaurants"],
        "description": "update restaurant in system",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID restaurant that we want to updated",
            "required": true,
            "type": "integer"
          },
          {
            "name": "New Name",
            "in": "body",
            "description": "New name for the Restaurant",
            "required": true,
            "schema": {
              "required": ["id"],
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "The restaurant was updated"
          }
        }
      }
    }
  },
  "definitions": {
    "Restaurant": {
      "required": ["id","name"],
      "properties": {
        "id": {
          "type": "integer",
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}




